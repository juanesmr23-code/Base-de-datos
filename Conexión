import mysql.connector
from mysql.connector import Error

def conectar():
    try:
        conexion = mysql.connector.connect(
            host='localhost',
            user='root',
            password='',
            database='tienda'
        )
        if conexion.is_connected():
            print("Conexi√≥n exitosa a la base de datos")
        return conexion
    except Error as e:
        print("Error al conectar a MySQL:", e)
        return None
